@model sistema_fichas.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


    <div class="col-md-12">
        <h1 class="text-center">@ViewBag.Title.</h1>
    </div>
    <hr />
<div class="row-fluid">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <section id="loginForm">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class="alert alert-danger"})
                <div class="well">
                    
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class="control-label"})
                            @Html.TextBoxFor(m => m.UserName, new { @class="form-control"})
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class="text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            
                            <div class="checkbox-inline">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })@Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="form-group-lg">
                            <input class="form-control btn btn-primary" type="submit" value="Log in" />
                            <input class="form-control btn btn-default" type="button" value="Cancel" />
                        </div>
                    
                </div>

            }
        </section>

    </div>
    <div class="col-md-4"></div>

</div>


