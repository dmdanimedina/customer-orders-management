@model sistema_fichas.ViewModels.PedidoViewModel

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/Scripts/select2.js"></script>
<link href="~/Content/select2.css" rel="stylesheet" />
<link href="~/Content/select2-bootstrap.css" rel="stylesheet" />

<div class="row">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PedidoDetalle.Pedido_ID)
        @Html.HiddenFor(model => model.PedidoDetalle.ID)
        @Html.HiddenFor(model => model.PedidoDetalle.EstadoDetalle_ID)
        @Html.HiddenFor(model => model.TipoDetalle)
        @Html.HiddenFor(model => model.PedidoDetalle.Tipo)
        var totalCheckPerColumn = Model.Herramientas.Count()/3;
        var i = 0;
    <div class="row-fluid">
        
        <div class="col-md-12">
            <div class="row-fluid">
                <div class="form-group">
                    @Html.LabelFor(model => model.PedidoDetalle.Cantidad, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.PedidoDetalle.Cantidad, new { @class = "form-control", @placeholder = "Ingresar cantidad (Ejem: 1)" })
                        @Html.ValidationMessageFor(model => model.PedidoDetalle.Cantidad, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PedidoDetalle.Valor, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.PedidoDetalle.Valor, new { @class = "form-control col-sm-1", @placeholder = "Ingrese Valor" })

                            <span class="input-group-addon">
                                @Html.DropDownListFor(model => model.PedidoDetalle.Moneda_ID, Model.ListaMonedas, new { @class = "" })
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.PedidoDetalle.Valor, null, new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Herramientas, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.PedidoDetalle.Herramienta_ID, Model.ListaHerramientas, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Herramientas, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Modalidades, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.PedidoDetalle.Modalidad_ID, Model.ListaModalidades, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Modalidades, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PedidoDetalle.Comentario, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.PedidoDetalle.Comentario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PedidoDetalle.Comentario, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
         
    </div>    
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#@Html.IdFor(model => model.PedidoDetalle.Herramienta_ID)').select2();
    });
</script>

