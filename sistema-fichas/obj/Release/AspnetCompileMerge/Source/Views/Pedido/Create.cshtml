@model sistema_fichas.ViewModels.PedidoViewModel

@{
    ViewBag.Title = "Create";
}

<div class="form-horizontal">
    <div class="row-fluid">
        <h1 class="text-info text-center">Crear Pedido</h1>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-md-12">
        
        <div class="form-group">
                @Html.LabelFor(model => model.Pedido.FechaInicio, new { @class = "control-label col-md-4" })
                <div class="col-md-4 pull-left">
                    @Html.TextBoxFor(model => model.Pedido.FechaInicio, new { @class = "form-control"})
                    <em>@Html.ValidationMessageFor(model => model.Pedido.FechaInicio, null, new { @class = "text-danger" })</em>
                </div>
            </div>
        <div class="form-group">
                @Html.LabelFor(model => model.Pedido.FechaTermino, new { @class = "control-label col-md-4" })
                <div class="col-md-4 pull-left">
                    @Html.TextBoxFor(model => model.Pedido.FechaTermino, new { @class = "form-control" })
                    <em>@Html.ValidationMessageFor(model => model.Pedido.FechaTermino, null, new { @class = "text-danger" })</em>
                </div>
            </div>
        <div class="form-group">
                @Html.LabelFor(model => model.Pedido.Facturacion, new { @class = "control-label col-md-4" })
                <div class="col-md-4 pull-left">
                        @Html.CheckBoxFor(model => model.Pedido.Facturacion, new { @class = "form-control" })
                    <em>@Html.ValidationMessageFor(model => model.Pedido.Facturacion, null, new { @class = "text-danger" })</em>
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.Pagador, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.CheckBoxFor(model => model.Pedido.Pagador, new { @class = "bootstrap-switch" })
                <em>@Html.ValidationMessageFor(model => model.Pedido.Pagador, null, new { @class = "text-danger" })</em>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.Estado, new { @class = "control-label col-md-4" })
            <div class="col-md-4 pull-left">
                @Html.DropDownListFor(model => model.Pedido.EstadoPedidoID , Model.ListaEstadoPedido, new { @class = "form-control" })
                <em>@Html.ValidationMessageFor(model => model.Pedido.Estado, null, new { @class = "text-danger" })</em>
            </div>
        </div>

        <div class="form-group">
                @Html.LabelFor(model => model.Pedido.ClienteID, new { @class = "control-label col-md-4" })
                <div class="col-md-4 pull-left">
                    @Html.DropDownListFor(model => model.Pedido.ClienteID , Model.ListaClientes, new { @class = "form-control" })
                    <em>@Html.ValidationMessageFor(model => model.Pedido.ClienteID, null, new { @class = "text-danger" })</em>
                </div>
        </div>


    </div>
    <div class="col-md-12 col-md-pull-2">
        <button type="submit" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-check"> </span> Guardar
        </button>
        </div>



}

        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $('#@(Html.IdFor(model=> model.Pedido.FechaInicio))').datetimepicker();
                $('#@(Html.IdFor(model=> model.Pedido.FechaTermino))').datetimepicker();
            });

            var options = {
                onText: "Si",
                offText: "No"
            };
            $("#@(Html.IdFor(model=> model.Pedido.Facturacion))").bootstrapSwitch(options);
            
        });
    </script>
}