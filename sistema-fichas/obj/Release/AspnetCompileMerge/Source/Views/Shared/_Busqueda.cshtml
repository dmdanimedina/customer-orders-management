@model sistema_fichas.ViewModels.BusquedaViewModel

<section id="busqueda" style="margin-top:20px">
    <div class="row-fluid">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Busqueda Avanzada</a>
                </div>
                <div class="collapse navbar-collapse">
                    @using (Html.BeginForm(Model.NombreAccion, Model.NombreControlador, null, FormMethod.Get, new { @class = "navbar-form navbar-right form-inline", @for = "form" }))
                    {
                        <div class="form-group">
                            @Html.TextBox("busqueda", Model.FiltroFormulario, new { @class = "form-control", @placeholder = Model.PlaceholderFormulario })
                            <button type="submit" class="form-control btn btn-primary">
                                <span class="glyphicon glyphicon-search"> </span>
                                Buscar
                            </button>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </div>
</section>