@model IEnumerable<sistema_fichas.Models.Cliente>

@{
    ViewBag.Title = " Reporte Cliente";
}

<h2>Reporte Clientes</h2>


<div class="row">
    <div class="col-xs-12 col-md-12 form-group">
        <a class="pull-right" href="javascript:void(0)">
            <button class="btn btn-sm btn-success">
                <i class="fa fa-file-excel-o"></i> Exportar
            </button>
        </a>
    </div>
    <div class="col-xs-12 col-md-12">
        <table class="table table-bordered table-condensed table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rut)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RazonSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Giro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndustriaID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoClienteID)
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rut) - @Html.DisplayFor(modelItem => item.Dv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazonSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Giro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Industria.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCliente.Nombre)
                    </td>

                </tr>
            }

        </table>

    </div>
</div>
